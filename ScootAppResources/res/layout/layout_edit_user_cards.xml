                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="3.0dip" android:weightSum="1.0">
                    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="2.0dip" android:text="Card Name" android:layout_weight="0.5" />
                    <EditText android:id="@id/edit_text_card_name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="2.0dip" android:hint="Card Name" android:singleLine="true" android:layout_weight="0.5" android:imeOptions="flagNoExtractUi" />
                </LinearLayout>
            </LinearLayout>
